<body class="is-primary">
    <section class="hero">
        <div class="hero-body">
            <div class="container">
                <h1 class="title has-text-white">
                    Chat em tempo real
                </h1>
                <h2 class="subtitle has-text-light">
                    Com socket.io
                </h2>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div id="nick" >
                <form accept-charset="UTF-8" role="form" class="form-signin" action="/lista" method="post">
                                <fieldset>
                                    <label class="panel-login">
                                        <div class="login_result"></div>
                                    </label>
                                    <input class="form-control" placeholder="Nome ou apelido" id="nickname" name="nick" type="text">
                                    <input class="form-control" placeholder="Nome ou apelido" id="id_usuario" name="id" type="text">
                                    <br></br>
                                    <input class="btn btn-lg btn-success btn-block" type="submit" id="entrar" value="Entrar Â»">
                                </fieldset>
                            </form>
            </div>
            
            
        </div>
    </section>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="./socket.io/socket.io.js"></script>
    <script>
        var socket = io();

        $('#entrar').click(function(){
            var nick = $('#nickname').val();
            var id_usuario = $('#id_usuario').val();
        
            socket.emit('adduser',{nick: nick, idusuario: id_usuario});
        });
    </script>
